<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_wolke"
    tools:context=".StartActivity" >
    
    <ImageButton
        android:id="@+id/imageButtonOben"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButtonRechts"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_oben" />

    <ImageButton
        android:id="@+id/imageButtonRechts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageButtonOben"
        android:src="@drawable/ic_rechts" />

    <ImageButton
        android:id="@+id/imageButtonUnten"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButtonRechts"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/imageButtonRechts"
        android:src="@drawable/ic_unten" />

    <ImageButton
        android:id="@+id/imageButtonLinks"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButtonOben"
        android:layout_toLeftOf="@+id/imageButtonUnten"
        android:src="@drawable/ic_links" />

</RelativeLayout>